#include<stdio.h>
int main()
{
	int a[10];
	int i,n,evencount=0,oddcount=0;
	scanf("%d",&n);
	for(i=0;i<n;i++)
	{
		scanf("%d",&a[i]);
	}
	printf("even numbers: ");
	for(i=0;i<n;i++)
	{
		if(a[i]%2==0)
		{
		evencount++;
		printf("%d ",a[i]);
    	}
	}
	printf("\nodd numbers: ");
	for(i=0;i<n;i++)
	{
		if(a[i]%2!=0)
		{
		oddcount++;
		printf("%d ",a[i]);
     	}
	}
	printf("\n\neven count = %d",evencount);
	printf("\nodd count = %d",oddcount);
}
